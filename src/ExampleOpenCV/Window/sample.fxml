            prefWidth="600.0" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="ExampleOpenCV.Window.Controller">
    <center>
        <ImageView fx:id="imageView" fitHeight="150.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true"
                   BorderPane.alignment="CENTER"/>
    </center>
    <right>
        <Button fx:id="buttonStart" mnemonicParsing="false" onAction="#startCamera" text="Start Camera"
                BorderPane.alignment="CENTER"/>
    </right>
    <bottom>
        <Label fx:id="lableInf" BorderPane.alignment="CENTER"/>
    </bottom>
</BorderPane>
